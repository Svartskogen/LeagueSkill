@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-1">League Skill</h1>
    <br />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <input type="text" class="form-control bg-light" asp-for="Profile.Username" placeholder="Username" />
                <select class="form-control bg-light" asp-for="Region" asp-items="Model.RegionsList"></select>
                <button type="submit" class="form-control btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-7 col-md-offset-1">
            @if (Model.ValidSearch)
            {
                if (Model.DataLoaded)
                {
                    <h5 class="display-4">@Model.SummonerInfo.Name ranked stats:</h5>
                    @foreach (RiotNet.Models.LeagueEntry entry in Model.Leagues)
                    {
                        <h5>@Utils.PrintLeagueData(entry)</h5>
                    }
                }
                else
                {
                    <h3 class="display-4 text-danger">Could not find a profile called @Model.Profile.Username</h3>
                }
            }
        </div>
    </div>
    <!-- tabla para game activo-->
    
    <br />

   
</div>
